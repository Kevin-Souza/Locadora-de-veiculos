@model Locadora_de_veiculos.Models.Veiculo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Apagar Veículo";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Dados do Veículo a ser Removido
    </div>
    <div class="panel-body">

        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Nome, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Marca)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Marca, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ano)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Ano, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Km)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Km, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Combustivel)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Combustivel, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cor)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Cor, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Valor)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Valor, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover Veículo"
                   class="btn btn-danger" />
            @Html.ActionLink("Retornar para a listagem", "Index", null,
           new { @class = "btn btn-info" })
        }
    </div>
</div>

@section ScriptPage{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liVeiculos').addClass("active")
        });
    </script>
}



