                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Km, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Combustivel)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Combustivel, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cor)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Cor, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Valor)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(Model => Model.Valor, new
           {
               htmlAttributes =
               new { @class = "form-control", disabled = "disabled" }
           })
            </div>
        </div>

    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.VeiculoID },
       new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null,
       new { @class = "btn btn-info" })
    </div>
</div>

@section ScriptPage{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liVeiculos').addClass("active")
        });
    </script>
}



